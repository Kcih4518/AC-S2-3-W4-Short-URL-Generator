{{#unless shortURL}}
<form class="container mx-auto d-flex flex-column align-items-center" method='POST' action='/'>
  <div class="mb-3">
    <input type="url" class="form-control" id="inputURL" name='originURL' placeholder="Input URL here" required>
  </div>
  <button type="submit" class="btn btn-outline-primary">Shorten</button>
</form>
{{else}}
<div class="mb-3">
  <p>Success! Please use this link:</p>
  <a id="URL" href="{{urlProtocolAndServer}}{{shortURL}}" target="_blank"
    class="fs-3">{{urlProtocolAndServer}}{{shortURL}}</a>
</div>
<button class="btn btn-primary" type="button" id="copy" onclick="clickToCopy()">Copy URL</button>
{{/unless}}